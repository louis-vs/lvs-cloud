# Hetzner Cloud Environment Variables
# Copy this to .env and fill in your actual values

# Hetzner Cloud API Token (get from https://console.hetzner.cloud/projects -> Security -> API Tokens)
export HCLOUD_TOKEN="your-hetzner-api-token-here"

# Project Configuration
export PROJECT_NAME="lvs-cloud"
export DOMAIN="lvs.me.uk"

# Terraform Configuration
export TF_VAR_hcloud_token="${HCLOUD_TOKEN}"
export TF_VAR_project_name="${PROJECT_NAME}"
export TF_VAR_domain="${DOMAIN}"
export TF_VAR_registry_user="${REGISTRY_USER}"
export TF_VAR_registry_pass="${REGISTRY_PASS}"
export TF_VAR_s3_access_key="${S3_ACCESS_KEY}"
export TF_VAR_s3_secret_key="${S3_SECRET_KEY}"

# Docker Registry Configuration
export REGISTRY_URL="registry.lvs.me.uk"
export REGISTRY_USER="admin"
export REGISTRY_PASS="your-registry-password-here"

# Grafana Configuration
export GRAFANA_ADMIN_USER="admin"
export GRAFANA_ADMIN_PASS="your-grafana-password-here"

# Hetzner Object Storage (S3-compatible) Configuration
export S3_ACCESS_KEY="your-s3-access-key-here"
export S3_SECRET_KEY="your-s3-secret-key-here"
export S3_ENDPOINT="https://fsn1.your-objectstorage.com"
export S3_BUCKET_NAME="lvs-cloud-terraform-state"

# AWS environment variables for Terraform S3 backend authentication
export AWS_ACCESS_KEY_ID="${S3_ACCESS_KEY}"
export AWS_SECRET_ACCESS_KEY="${S3_SECRET_KEY}"
