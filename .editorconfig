# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Specific overrides
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[*.rb]
indent_size = 2
max_line_length = 120

[*.{tf,tfvars}]
indent_size = 2
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.{js,json}]
indent_size = 2
max_line_length = 120

[*.sh]
indent_size = 2
max_line_length = 120

[Dockerfile]
indent_size = 2
max_line_length = 120

[Makefile]
indent_style = tab
indent_size = 4
