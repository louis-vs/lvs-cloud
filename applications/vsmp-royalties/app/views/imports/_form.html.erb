<%= form_with(model: import) do |form| %>
  <% if import.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(import.errors.count, "error") %> prohibited this import from being saved:</h2>

      <ul>
        <% import.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :csv_file, "CSV File", style: "display: block" %>
    <%= form.file_field :csv_file, accept: ".csv", required: true %>
    <% if import.csv_file.attached? %>
      <p>Current file: <%= import.csv_file.filename %></p>
    <% end %>
  </div>

  <div>
    <%= form.label :fiscal_year, style: "display: block" %>
    <%= form.number_field :fiscal_year, required: true, placeholder: "2024" %>
  </div>

  <div>
    <%= form.label :fiscal_quarter, "Fiscal Quarter (1-4)", style: "display: block" %>
    <%= form.number_field :fiscal_quarter, required: true, min: 1, max: 4, placeholder: "1" %>
  </div>

  <div>
    <%= form.submit import.persisted? ? "Update Import" : "Upload and Process CSV" %>
  </div>
<% end %>
